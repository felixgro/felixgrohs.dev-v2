{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"allowJs": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"noEmit": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./src/*"],
			"#/*": ["./src/styles/modules/"]
		},
		"skipLibCheck": true
	},
	"include": ["src/**/*", "tests/**/*"]
}
